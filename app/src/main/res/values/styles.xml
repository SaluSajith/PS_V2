<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="contentInsetStart">0dp</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow_indicator</item>
    </style>

    <style name="AppTheme.NoActionBar1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow_indicator</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textview_heading">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_xxxlarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="textview_normal">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:padding">@dimen/padding_xsmall</item>
    </style>

    <style name="textview_title">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_xlarge</item>
        <item name="android:padding">@dimen/padding_xsmall</item>
    </style>

    <style name="textview_small">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:padding">@dimen/padding_xsmall</item>
    </style>

    <style name="textview_white_normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/padding_large</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="textview_heading_yellow">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:alpha">.9</item>
        <item name="android:ellipsize">end</item>
        <item name="android:rotation">-4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/textsize_xxxlarge</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textview_yellow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/yellow_indicator</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:paddingLeft">@dimen/padding_standard</item>
        <item name="android:paddingRight">@dimen/padding_standard</item>
        <item name="android:paddingTop">@dimen/padding_xxxsmall</item>
        <item name="android:paddingBottom">@dimen/padding_xxxsmall</item>

    </style>

    <style name="button_welcome">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_xxlarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:rotation">0</item>
        <item name="android:background">@null</item>
    </style>

    <style name="button_standard">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_xxlarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:width">@dimen/submitbtn_width</item>
        <item name="android:height">@dimen/submitbtn_height</item>
    </style>

    <style name="heading_welcome">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/textsize_xxlarge</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edittext_white_normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>

</resources>
