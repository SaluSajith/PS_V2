<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fixed_top" />

    <RelativeLayout
        android:id="@+id/rl_AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logo1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rll"
        android:alpha="0.7"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5sp"
        android:padding="5sp"
        android:rotation="-5"
        android:text="CHANGE PASSWORD"
        android:textColor="@color/yellow"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginTop="-32sp"
        android:background="@drawable/cp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/edt_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:background="@drawable/email"
            android:hint="current password"
            android:inputType="textPassword"
            android:padding="5sp"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_current_password"
            android:layout_marginTop="-7sp"
            android:background="@drawable/password"
            android:hint="new password"
            android:inputType="textPassword"
            android:padding="5sp"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_new_password"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-13sp"
            android:background="@drawable/email"
            android:hint="confirm new password"
            android:inputType="textPassword"
            android:padding="5sp"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/submit" />
</RelativeLayout>
