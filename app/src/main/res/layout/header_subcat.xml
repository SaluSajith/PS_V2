<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_inner_pages"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_location"
        android:background="@drawable/headeryellow"
        android:layout_marginTop="@dimen/content_overlapmargin_activity"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="-4"
            android:orientation="horizontal">

            <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                style="@style/textview_small"
                android:textColor="@color/black"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:id="@+id/tv_location"/>

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/textsize_xlarge"
                android:layout_height="@dimen/textsize_xlarge"
                android:src="@drawable/ic_expand"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:rotation="-4"
        android:layout_marginTop="-15dp"
        android:background="@color/black"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <!--style="@style/ll_style_rotation"-->
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="All"
            style="@style/textview_yellow"
            app:pret_typeface="@string/font_merriweather_regular"/>
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Brands"
            style="@style/textview_black"
            app:pret_typeface="@string/font_merriweather_regular"/>
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Highstreet"
            style="@style/textview_yellow"
            app:pret_typeface="@string/font_merriweather_regular"/>
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Retail"
            style="@style/textview_yellow"
            app:pret_typeface="@string/font_merriweather_regular"/>
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jewellery"
            style="@style/textview_yellow"
            app:pret_typeface="@string/font_merriweather_regular"/>
    </LinearLayout>
</LinearLayout>