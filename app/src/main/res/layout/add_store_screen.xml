<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_simple"
            android:id="@+id/header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            ></include>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginTop="-40dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@drawable/add_store_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/email"
                    android:hint="store name"
                    android:layout_marginTop="3dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:background="@drawable/password"
                    android:hint="contact person name"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-13dp"
                    android:background="@drawable/email"
                    android:hint="email id"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_landline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:background="@drawable/password"
                    android:hint="landline no."
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-13dp"
                    android:background="@drawable/email"
                    android:hint="location"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:background="@drawable/password"
                    android:hint="mobile no."
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edt_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="-13dp"
                    android:background="@drawable/email"
                    android:hint="about store"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:src="@drawable/submit" />
    </RelativeLayout>
</ScrollView>
