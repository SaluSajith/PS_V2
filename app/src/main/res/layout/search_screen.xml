<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/fixed_top" />

    <RelativeLayout
        android:id="@+id/rl_AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logo1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_search"
        android:alpha="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_search"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:rotation="-4"
        android:text="SEARCH FOR:"
        android:textColor="@color/yellow"
        android:textSize="25sp" />

    <!--<include layout="@layout/header_simple"
        android:id="@+id/header"></include>-->


    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img"
        android:layout_marginTop="-20dp"
        android:rotation="-4.5"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_gravity="center_vertical"
        android:background="@color/trans_yellow"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/padding_standard"
            app:actionViewClass="android.support.v7.widget.SearchView"
            app:iconifiedByDefault="false">

            <!--  <requestFocus />-->

        </android.support.v7.widget.SearchView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_search"
        android:background="@color/trans_grey"
        android:rotation="-4.5"
        android:paddingBottom="@dimen/padding_standard"
        android:paddingTop="@dimen/padding_standard"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-5dp">
        <TextView
            android:id="@+id/txt_recentsearches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:layout_marginLeft="@dimen/padding_xxlarge"
            android:gravity="center_vertical"
            android:text="YOUR RECENT SEARCHES :"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/yellow" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_recent_search"
        android:layout_marginTop="-25dp"
        android:background="@drawable/details_base">

        <ListView
            android:id="@+id/list_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="10dp"
            android:headerDividersEnabled="false"
            android:divider="@color/yellow"
            android:layout_below="@+id/ll"
            android:dividerHeight="5dp"
            android:visibility="visible" />

        <ListView
            android:id="@+id/list_recentsearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="30dp"
            android:headerDividersEnabled="false"
            android:layout_below="@+id/ll"
            android:divider="@color/transparent"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>
