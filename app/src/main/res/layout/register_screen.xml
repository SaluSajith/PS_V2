<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_fixed_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/fixed_top"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:rotation="-3"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/txt_sign_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:rotation="-6"
                android:text="sign in via"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-35dp"
            android:background="@drawable/blackpatch"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_facebook"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="15sp"
                    android:layout_weight="1"
                    android:background="@drawable/facebook"
                    android:padding="5sp" />

                <Button
                    android:id="@+id/btn_google"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/google"
                    android:padding="5sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:src="@drawable/tagline" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-37sp"
            android:alpha="0.9"
            android:background="@drawable/sign_up_base"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="-10sp"
                android:layout_marginTop="25dp"
                android:background="@drawable/email"
                android:hint="name:"
                android:inputType="textCapWords"
                android:padding="10sp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp">

                <Spinner
                    android:id="@+id/spinnewr_code"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/country_code"
                    android:entries="@array/code"
                    android:gravity="center"
                    android:padding="10sp"
                    android:prompt="@string/select_code"
                    android:spinnerMode="dialog"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edt_number"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="2sp"
                    android:layout_weight="8"
                    android:background="@drawable/mobile"
                    android:hint="mobile no"
                    android:inputType="number"
                    android:padding="10sp"
                    android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-13sp"
                android:background="@drawable/email"
                android:hint="email id:"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="-8sp"
                android:background="@drawable/password"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-25sp"
            android:background="@drawable/alreadyaccounthere"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:padding="5sp"
                android:src="@drawable/signup" />

            <ImageView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8sp"
                android:gravity="center"
                android:padding="5sp"
                android:src="@drawable/login1" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_addstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-15sp"
            android:background="@drawable/add_store" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-75sp"
            android:background="@drawable/bottom_fade"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_pretstreet_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85sp"
                android:padding="2sp"
                android:text="By creating an account you agree to Pretstreet App"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txt_conditon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:text="Conditions of use"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:padding="2sp"
                    android:text=" and "
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:padding="2sp"
                    android:text="Privacy Notice."
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
