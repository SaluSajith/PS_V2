<?xml version="1.0" encoding="utf-8"?>
<com.hit.pretstreet.pretstreet.core.customview.GridviewChild
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">

        <ImageView
            android:id="@+id/img_cat_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tile_cat1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="Image"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tile_shadow1"
            android:scaleType="fitXY"
            android:id="@+id/img_cat_image1"
            android:adjustViewBounds="true"
            android:contentDescription="Image"/>

    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
        android:id="@+id/txt_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Category"
        android:textAllCaps="false"
        android:textSize="12dp"
        android:textColor="@color/dark_gray"
        app:pret_typeface="font_merriweather_bold"/>
</com.hit.pretstreet.pretstreet.core.customview.GridviewChild>