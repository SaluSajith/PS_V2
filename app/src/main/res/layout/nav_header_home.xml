<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo1"
        android:layout_gravity="end"
        android:paddingRight="@dimen/padding_large"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.hit.pretstreet.pretstreet.core.customview.CircularImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/logo1"
            android:id="@+id/iv_profile"
            android:layout_marginLeft="@dimen/padding_standard"
            android:layout_gravity="center"/>

        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tv_profile"
            android:text="@string/app_name"
            android:maxLines="2"
            style="@style/textview_white_normal"
            app:pret_typeface="@string/font_redvelvet_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            android:id="@+id/iv_notification"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_standard"/>
        
        <com.hit.pretstreet.pretstreet.core.customview.NotificationBadge
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            app:nbTextColor="@color/white"
            android:layout_marginLeft="-30dp"
            android:layout_gravity="top"
            app:nbMaxTextLength="2"/>
    </LinearLayout>
</LinearLayout>
