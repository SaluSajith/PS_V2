<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_dd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_cat_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:rotation="-4.3"
        android:layout_marginTop="@dimen/padding_xlarge"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        android:id="@+id/view_seperator"
        android:background="@drawable/yellow_rectangle"/>

    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
        android:id="@+id/txt_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_rectangle"
        android:gravity="center"
        android:padding="8sp"
        android:rotation="-4.3"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Category"
        android:textAllCaps="true"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="@dimen/padding_standard"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/dark_gray"
        android:layout_alignParentRight="true"
        app:pret_typeface="@string/font_redvelvet_regular"/>

</RelativeLayout>
