<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blackpatch"
    android:orientation="vertical"
    android:layout_below="@+id/rl_fixed_top"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_height"
        android:layout_marginTop="@dimen/padding_xsmall"
        android:background="@drawable/buttons"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/buttons_topmargin"
            android:rotation="-5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_sign_up"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>
            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_login"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/login"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_height"
        android:paddingBottom="3dp"
        android:layout_marginTop="@dimen/buttons_layouttopmargin"
        android:layout_marginBottom="3dp"
        android:background="@drawable/buttons"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/buttons_topmargin"
            android:rotation="-5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_facebook"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/facebook"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>

            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_google"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/google"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>