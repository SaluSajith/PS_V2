<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0sp"
    android:layout_marginBottom="@dimen/divider_space_xlarge"
    android:paddingBottom="@dimen/divider_space_xlarge"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:layout_marginTop="-4dp"
    card_view:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_banner"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Image"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/padding_large"
                android:id="@+id/ll_desc">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
                        android:id="@+id/txt_shopname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Z Studio"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/padding_small"
                        style="@style/textview_title"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        app:pret_typeface="@string/font_merriweather_bold" />
                    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
                        android:id="@+id/txt_description"
                        android:layout_width="wrap_content"
                        android:text="Text"
                        android:maxLines="3"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        app:pret_typeface="@string/font_merriweather_regular"/>

                    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:text="28 Apr 2017"
                        android:layout_height="match_parent"
                        style="@style/textview_normal"
                        android:layout_marginLeft="5dp"
                        android:textSize="9dp"
                        app:pret_typeface="@string/font_merriweather_bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/padding_large">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/grey_heart"
                        android:id="@+id/iv_like"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:contentDescription="Like"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_share"
                        android:id="@+id/iv_share"
                        android:layout_marginBottom="@dimen/padding_standard"
                        android:contentDescription="Share"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                    android:id="@+id/bt_interested"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/interested_white"/>

                <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                    android:id="@+id/bt_going"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@drawable/going_white"/>
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>