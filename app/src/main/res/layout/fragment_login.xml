<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_height"
        android:paddingBottom="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/buttons"
        android:orientation="horizontal"
        android:id="@+id/ll_sociallogins">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/buttons_topmargin"
            android:rotation="@integer/rotation_text"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_facebook"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/facebook"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>

            <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
                android:id="@+id/btn_google"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/google"
                style="@style/button_welcome"
                app:pret_typeface="@string/font_merriweather_regular"
                android:padding="5sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbanner"
        android:layout_marginTop="-30sp"
        android:rotation="@integer/rotation_login">

        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:id="@+id/tv_heading"
            style="@style/heading_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotation="@integer/rotation_text"
            android:text="Login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginRight="-1dp"
        android:layout_marginLeft="-1dp"
        android:rotation="@integer/rotation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_xxxlarge"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_email_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/mobile"
                android:inputType="phone"
                android:ems="10"/>
        </LinearLayout>

    </LinearLayout>

    <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        style="@style/button_standard"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>
</LinearLayout>
