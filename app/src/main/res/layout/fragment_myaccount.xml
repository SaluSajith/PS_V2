<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/myaccount_height"
        android:background="@drawable/profilebg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginRight="-1dp"
        android:layout_marginLeft="-1dp">

        <com.hit.pretstreet.pretstreet.core.customview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/profilepic"
            android:id="@+id/civ_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/firstname"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/namebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/lastname"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="horizontal"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/edittext_white_normal"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/namebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/dob"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="horizontal"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/edittext_white_normal"
                android:hint="@string/mobilenumbr"
                android:inputType="phone" />
        </LinearLayout>
    </LinearLayout>

    <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/submitbtn_width"
        android:layout_height="@dimen/submitbtn_height"
        android:text="@string/submit"
        style="@style/button_standard"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>


    <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
        android:id="@+id/btn_changepass"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="@dimen/textsize_small"
        android:textColor="@color/dark_gray"
        android:background="@color/yellow_trans"
        android:text="@string/change_pass"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

</LinearLayout>