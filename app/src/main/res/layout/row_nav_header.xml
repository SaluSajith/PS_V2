<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_large"
    android:layout_marginRight="@dimen/padding_large">

    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/dark_gray"
        android:id="@+id/tv_nav_item"
        app:pret_typeface="@string/font_merriweather_regular"
        android:textSize="@dimen/textsize_xlarge"
        android:layout_margin="@dimen/padding_small"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_arrow_expand"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/selector_arrow_down"
        android:visibility="visible"/>
</LinearLayout>
