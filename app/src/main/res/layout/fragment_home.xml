<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_main_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!--<include layout="@layout/row_sub_cat_list1"></include>

        <include layout="@layout/row_sub_cat_list2"></include>-->

        <!--<include layout="@layout/row_sub_cat_list1"></include>

        <include layout="@layout/row_sub_cat_list2"></include>-->

        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_banners"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/pager_height"
        android:fitsSystemWindows="true"
        android:background="@color/dark_gray"
        tools:listitem="@layout/image_slider_item"
        android:layout_below="@+id/ll_main_cat"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape"/>

    <RelativeLayout
        android:id="@+id/rl_category"
        android:layout_below="@+id/pager_banners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_category"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="@dimen/padding_large"
            android:paddingTop="80dp"
            android:paddingBottom="40dp"/>

        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:id="@+id/txt_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/yellow_rectangle"
            android:padding="8sp"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Shop by Category"
            android:textAllCaps="true"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="@dimen/padding_standard"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/dark_gray"
            app:pret_typeface="@string/font_redvelvet_regular"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_moods"
        android:layout_below="@+id/rl_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_moods"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="@dimen/padding_large"
            android:paddingTop="80dp"
            android:paddingBottom="40dp"/>

        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_rectangle"
            android:gravity="center"
            android:padding="8sp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Shop by Category"
            android:textAllCaps="true"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="@dimen/padding_standard"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/dark_gray"
            android:layout_alignParentRight="true"
            app:pret_typeface="@string/font_redvelvet_regular"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main_cat_bottom"
        android:layout_below="@+id/rl_moods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape"/>

</RelativeLayout>