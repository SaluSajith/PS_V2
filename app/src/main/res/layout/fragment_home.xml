<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_main_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!--<include layout="@layout/row_sub_cat_list1"></include>-->

        <!--<include layout="@layout/row_sub_cat_list2"></include>

        <include layout="@layout/row_sub_cat_list1"></include>

        <include layout="@layout/row_sub_cat_list2"></include>-->

        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_banners"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/pager_height"
        android:fitsSystemWindows="true"
        android:background="@color/dark_gray"
        tools:listitem="@layout/image_slider_item"
        android:layout_below="@+id/ll_main_cat"
        android:layout_marginTop="@dimen/content_overlapmargin"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_category"
        android:visibility="gone"
        android:background="@color/dark_gray"
        android:layout_below="@+id/pager_banners"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape"
        android:paddingTop="80dp"
        android:paddingBottom="50dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_moods"
        android:visibility="gone"
        android:background="@color/dark_gray"
        android:layout_below="@+id/rv_category"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape"
        android:paddingTop="80dp"
        android:paddingBottom="50dp"/>
    <LinearLayout
        android:id="@+id/ll_main_cat_bottom"
        android:layout_below="@+id/rv_moods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="@dimen/content_overlapmargin_hometrape">
    </LinearLayout>
</RelativeLayout>