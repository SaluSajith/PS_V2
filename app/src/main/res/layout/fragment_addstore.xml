<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/addstore_height"
        android:background="@drawable/addstorebg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginRight="-1dp"
        android:layout_marginLeft="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/storename"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/namebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/contactname"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="horizontal"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/edittext_white_normal"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/namebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/landline"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/mobilenumbr"
                android:inputType="phone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/namebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/location"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addstore_row_height"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/phonebg"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.hit.pretstreet.pretstreet.core.customview.EdittextPret
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_white_normal"
                android:hint="@string/about"
                android:inputType="textShortMessage"/>
        </LinearLayout>
    </LinearLayout>

    <com.hit.pretstreet.pretstreet.core.customview.ButtonPret
        android:id="@+id/btn_addstore"
        android:layout_width="@dimen/submitbtn_width"
        android:layout_height="@dimen/submitbtn_height"
        android:text="@string/submit"
        style="@style/button_standard"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

</LinearLayout>