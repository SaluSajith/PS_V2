<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_container"
    android:orientation="vertical"
    android:layout_width="@dimen/notif_icon_"
    android:layout_height="@dimen/notif_icon_"
    android:layout_margin="@dimen/padding_xxxsmall"
    android:visibility="invisible">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_badge_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/red_circle"/>

    <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
        android:id="@+id/tv_badge_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:layout_gravity="top|center_horizontal"
        android:gravity="top|center_horizontal"
        android:maxLines="1"
        android:textSize="@dimen/textsize_standard"
        tools:text="1" />

</FrameLayout>