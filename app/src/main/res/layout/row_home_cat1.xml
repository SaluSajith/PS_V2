<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_margin="2dp">
    <!--<android.support.v7.widget.CardView
        android:id="@+id/direction_card_view"
        android:layout_marginBottom="1dp"
        card_view:cardElevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/transparent">-->
        <ImageView
            android:id="@+id/img_cat_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/tile_shadow"
            android:src="@drawable/tile_cat"
            android:scaleType="fitXY"
            android:layout_marginBottom="1dp"
            android:layout_margin="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="Image"/>

   <!-- </android.support.v7.widget.CardView>-->

    <android.support.v7.widget.CardView
        android:id="@+id/direction_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/yellow"
        card_view:cardUseCompatPadding="true">
        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:id="@+id/txt_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7sp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Category"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textColor="@color/dark_gray"
            app:pret_typeface="@string/font_redvelvet_regular"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>