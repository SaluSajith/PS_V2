<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/upload"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/black">

        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:padding="10sp"
            android:text="Skip"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/rl_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_skip"
            android:layout_centerInParent="true"
            android:layout_marginTop="100sp">

            <com.hit.pretstreet.pretstreet.CircleImageView
                android:id="@+id/img_upload_photo"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_centerHorizontal="true"
                android:padding="10sp"
                android:src="@drawable/defaultimg" />

            <TextView
                android:id="@+id/txt_upload_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_upload_photo"
                android:layout_centerHorizontal="true"
                android:padding="10sp"
                android:text="Upload Profile Picture"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/yellow" />
        </RelativeLayout>

        <Button
            android:id="@+id/img_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_profile_pic"
            android:layout_centerInParent="true"
            android:layout_marginTop="50sp"
            android:background="@drawable/continue_" />
    </RelativeLayout>
</RelativeLayout>
