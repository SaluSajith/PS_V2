<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_store_photo"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:scaleType="matrix"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:id="@+id/ll_listdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical"
            android:id="@+id/ll_sale_arrival">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_margintop"
                ></TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:id="@+id/rl_sale_arrival">

                <ImageView
                    android:id="@+id/img_new_arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_sale"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/txt_storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:minLines="2"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    android:layout_marginRight="10dp"
                    android:text="Store"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="1dp"
                android:text="Store Address"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_margin="@dimen/padding_standard"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:divider="@drawable/vertical"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/txt_folleowercount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/img_follow_unfollow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Follow"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/yellow"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="-10dp"
            android:visibility="invisible"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible"
        android:layout_below="@+id/ll_listdata">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>
</RelativeLayout>
